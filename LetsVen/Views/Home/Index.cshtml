@model LetsVen.ViewModels.upComingAdvGroupsModel

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

    <link rel="stylesheet" href="/css/HomePge.css" />
    <style>

    </style>
</head>
<body class="m-0 p-0">
    <!-- Navigation Bar -->
    <div id="navbar">
    </div>

    <div class="container-fluid mt-5">
        <div class="img-title w-100">
            <div class="img-container mx-0 p-5">
                <h1 class="mt-3">Live Your</h1>
                <h1>Adventure!</h1>
                <p class="col-sm-12 col-md-6 col-lg-4">
                    Discover unique adventures in
                    <span class="fs-3" style="color: black">Jordan</span> and create
                    unforgettable memories — <span>explore</span>,
                    <span>connect</span> , and <span>venture</span> beyond the ordinary
                    with letsVenture.
                </p>
                <a href="@Url.Action("Index","Adventures")" class="btn">Discover Now</a>
            </div>
        </div>
    </div>

    <div class="container mt-5">
        <div>
            <h1>Find an Adventure</h1>
        </div>
        <div class="row">
            <!-- Select dropdown for Jordan cities -->
            <div class="col-5">
                <select class="form-control" style="border-color: #ff6600">
                    <option value="">Select a city...</option>
                    <option value="amman">Amman</option>
                    <option value="zarqa">Zarqa</option>
                    <option value="irbid">Irbid</option>
                    <option value="aqaba">Aqaba</option>
                    <option value="madaba">Madaba</option>
                    <option value="mafraq">Mafraq</option>
                    <option value="salt">Salt</option>
                </select>
            </div>
            <!-- Date input field -->
            <div class="col-5">
                <input type="date"
                       class="form-control"
                       min="@DateTime.Now.ToString("yyyy-MM-dd")"
                       placeholder="Select a date"
                       style="border-color: #ff6600" />
            </div>

        </div>
    </div>

    <div class="container my-5">
        <div class="title-buttons d-flex justify-content-between">
            <h1>Coming this Week</h1>
            <div class="left-right-buttons d-flex flex-row">
                <button id="btn"
                        class="rounded-circle m-2"
                        style="width: 50px; height: 50px">
                    <i class="bi bi-arrow-left-short fs-1"></i>
                </button>
                <button id="btn"
                        class="rounded-circle m-2"
                        style="width: 50px; height: 50px">
                    <i class="bi bi-arrow-right-short fs-1"></i>
                </button>
            </div>
        </div>
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex flex-row overflow-auto">
                <!-- Card 1 -->
                @foreach (var item in Model.UpComingAdventures)
                {
                    <div class="card mx-2" style="min-width: 18rem">
                        <img src="@item.MainImagePath" class="card-img-top" alt="Wadi Rum Adventure" />
                        <div class="card-body">
                            <p class="text-muted">@item.StartDate.ToString("MMMM dd, yyyy")</p>
                            <h4 class="card-title">@item.Title</h4>
                            <p class="price">@item.Price JD</p>
                            <div class="d-flex justify-content-start pt-2">
                                <form asp-action="Details" asp-controller="Adventures" asp-route-id="@item.Id">
                                    <button type="submit" class="btn">Read More</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>

    <div class="container my-5">
        <div class="title-buttons d-flex justify-content-between">
            <h1>Our Groups</h1>
            <div class="left-right-buttons d-flex flex-row">
                <button class="rounded-circle m-2" style="width: 50px; height: 50px">
                    <i class="bi bi-arrow-left-short fs-1"></i>
                </button>
                <button class="rounded-circle m-2" style="width: 50px; height: 50px">
                    <i class="bi bi-arrow-right-short fs-1"></i>
                </button>
            </div>
        </div>
        <div class="clubs d-flex flex-row overflow-auto">
            @foreach (var item in Model.Groups)
            {
                <a href="@Url.Action("GroupProfile","Users",new {id = item.Id})">
                    <img class="rounded-circle"
                         src="@item.ProfilePicUrl"
                         alt="" />
                    <h6 class="text-center mt-3">@item.Name</h6>
                </a>
            }
        </div>
    </div>

    <div class="container">
        <h2>Are you intrested in joining our groups? </h2>
    </div>
    <div class="joinUs-container container my-5 py-2 px-3 text-center rounded shadow">
        <p class="lead mt-3 mb-4">
            Join our network of explorers and leaders! Create, promote, and host exciting events for your members effortlessly with <strong>letsVenture</strong>.
        </p>

        <div class="row mt-5 justify-content-center">
            <div class="col-md-4">
                <i class="bi bi-calendar2-plus-fill"></i>
                <h4 class="fw-bold mt-3">Create Events Easily</h4>
                <p>Organize your adventures in just a few clicks and invite your members with ease.</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-people-fill"></i>
                <h4 class="fw-bold mt-3">Grow Your Community</h4>
                <p>Reach more adventure seekers and connect with like-minded explorers.</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-megaphone-fill"></i>
                <h4 class="fw-bold mt-3">Promote Your Adventures</h4>
                <p>Gain visibility and attract new members with our powerful promotion tools.</p>
            </div>
        </div>

        <a href="@Url.Action("Index","JoinUs")" class="btn btn-lg mt-4 px-5">Join Now</a>

    </div>


    <div id="myFooter">
    </div>



    <script src="/HomePage/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
