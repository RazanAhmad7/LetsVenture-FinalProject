
@model LetsVen.ViewModels.BookingModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In - LetsVenture</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/bookingForm.css">
</head>

<body>

    <div class=" main-cont d-flex justify-content-center align-items-center">
        <div class="row shadow-lg rounded-4 overflow-hidden hh">
            <!-- Left Image Section (Swapped) -->
            <div class="col-lg-4 image-section d-none d-lg-flex">
                <h2>Book your Adventure!</h2>
              
                <form class="mt-5" asp-action="Index" asp-controller="Adventures">
                    <button type="submit" class="btn mt-5">Explore more</button>
                </form>
            </div>

            <!-- Right Form Section -->
            <div class="col-lg-8 bg-white form-section shadow rounded">
                <h3 class="text-center mt-1 mb-3">Try something uniqe and new</h3>

                <form asp-action="checkout" asp-controller="Booking" method="post">
                    <div class="mb-2 d-flex flex-row justify-content-between gap-5">
                        <!-- Name -->
                        <div class="mb-2 w-100">
                            <label for="Name" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter your full name" required>
                        </div>

                        <!-- Age -->
                        <div class="mb-2 w-100">
                            <label for="age" class="form-label">Age</label>
                            <input type="number" class="form-control" id="age" name="age" placeholder="Enter your age" required>
                        </div>
                    </div>

                    <div class="mb-2 d-flex flex-row justify-content-between gap-5">
                        <!-- Phone Number -->
                        <div class="mb-3 w-100">
                            <label for="phoneNum" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="phoneNum" name="phoneNum" placeholder="Enter your phone number" required>
                        </div>

                        <!-- Address -->
                        <div class="mb-2 w-100">
                            <label for="address" class="form-label">Address</label>
                            <input type="text" class="form-control" id="address" name="address" placeholder="Enter your address" required>
                        </div>
                    </div>


                    <!-- Booking for others question -->
                    <div class="mb-2">
                        <label class="form-label">Are you booking for others too?</label>
                        

                        <div class=" d-flex flex-row gap-5">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="bookingForOthers" id="bookingYes" value="yes" onclick="toggleNumberOfPersons(true)">
                                <label class="form-check-label" for="bookingYes">
                                    Yes
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="bookingForOthers" id="bookingNo" value="no" onclick="toggleNumberOfPersons(false)" checked>
                                <label class="form-check-label" for="bookingNo">
                                    No
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Hidden input for the number of persons -->
                    <div id="numberOfPersonsContainer" class="mb-2" style="display: none;">
                        <label for="numberOfPersons" class="form-label">Please enter the number of persons you are booking for.</label>
                        <input type="number" class="form-control" id="numberOfPersons" name="numberOfPersons" placeholder="Enter the number of persons">
                    </div>

                    <!-- Back and Submit Buttons -->
                    <div class="d-flex justify-content-between gap-5 mt-4">
                        <button type="button" class="btn btn-secondary" onclick="window.history.back();">Back</button>
                        <button type="submit" class="btn btn-primary">Proccess to Checkout</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
    function toggleNumberOfPersons(show) {
        const container = document.getElementById('numberOfPersonsContainer');
        if (show) {
            container.style.display = 'block';
        } else {
            container.style.display = 'none';
        }
    }
</script>
</body>
</html>
